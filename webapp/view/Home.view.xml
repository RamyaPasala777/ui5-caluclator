 >


   
   
     <HBox >
    <Label text="Calculator"  ></Label>
    </HBox>

    <VBox
        class="vbox"
        id="33"
    >
        <Label
            id="77"
            class="main"
            text="Calculator"
            textAlign="Right"
        />
        <Label
            class="labelid"
            id="1"
            labelFor="inputid"
            text="FirstNumber:"
        />
        <Input
            class="inputid"
            id="3"
            type="Number"
            width="60%"
            placeholder="Enter a Number"
            required="true"
        />

        <Label
            class="labelid"
            id="2"
            labelFor="inputid2"
            text="SecondNumber:"
        />
        <Input
            class="inputid2"
            id="4"
            type="Number"
            width="60%"
            placeholder="Enter a Number"
            required="true"
        />

        <Label
            class="labelid"
            id="5"
            labelFor="inputid4"
            text="Operator:"
        />
        <Input
            class="inputid4"
            id="6"
            type="Text"
            width="60%"
            placeholder="+,-,*,/"
        />

        <HBox id="22">
            <Button
                class="button"
                id="7"
                text="Calculation"
                press="onClick"
            />
            <Button
                class="button1"
                id="8"
                text="clear"
                press="onClick1"
                type="Default"
            />
        </HBox>
    </VBox>
